/**app.wxss**/
@import "./styles/iconfont.wxss";

page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0px;
  margin: 0;
  box-sizing: border-box;
}
/* 主题颜色通过变量来实现 
1. less中存在 变量 这个知识
*/
page{
  /* 定义主题颜色 */
  --themeColor:#eb4450;
  /* 定义统一的字体大小， 假设设计稿是375px
   1px=2rpx
   14px=28prx
  */
  font-size: 28rpx;
}

image{
  width: 100%;
}